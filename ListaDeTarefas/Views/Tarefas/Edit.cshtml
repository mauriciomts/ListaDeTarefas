@model ListaDeTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Editar a tarefa " + Model.Nome;
}

<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="titulo"><i class="fa fa-address-book fa-lg"></i>@ViewData["Title"]</h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TarefaId" />

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label">Nome</label>
                            <input asp-for="Nome" class="form-control form-control-lg" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label">Descrição</label>
                            <input asp-for="Descricao" class="form-control form-control-lg" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Inicio" class="control-label"></label>
                            <input asp-for="Inicio" class="form-control form-control-lg" />
                            <span asp-validation-for="Inicio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Fim" class="control-label"></label>
                            <input asp-for="Fim" class="form-control form-control-lg" />
                            <span asp-validation-for="Fim" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="ImportanciaId" class="control-label">Grau de Importância</label>
                            <select asp-for="ImportanciaId" class="form-control form-control-lg" asp-items="ViewBag.ImportanciaId"></select>
                            <span asp-validation-for="ImportanciaId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group botoes">
                        <input type="submit" value="Atualizar" class="btn btn-outline-success btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
